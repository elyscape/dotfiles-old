[user]
	name = Eli Young
	email = elyscape@gmail.com
[diff]
	tool = p4merge
[merge]
	tool = p4merge
	keepBackup = false
	defaultToUpstream = true
[mergetool]
	keepTemporaries = false
[rebase]
	autosquash = true
[push]
	default = simple
[fetch]
	prune = true
[log]
	mailmap = true
[alias]
	ap = add -p
	ca = commit --amend
	cac = commit --amend -CHEAD
	cam = commit --amend -m
	cm = commit -m
	dc = diff --cached
	dt = difftool
	dtc = difftool --cached
	fa = fetch --all
	lf = log FETCH_HEAD
	mt = mergetool
	pf = push --force
	pt = push --tags
	pu = !"git pull upstream \"${1-$(git rev-parse --abbrev-ref HEAD)}\";:"
	pushup = !"git push -u \"${1-origin}\" HEAD;:"
	rb = rebase
	rh = reset --hard
	ss = -c status.submodulesummary=true status
	whitespace = !git --paginate diff-tree --check $(git hash-object -t tree /dev/null) HEAD
[advice]
	resolveConflict = false
	statusHints = false
